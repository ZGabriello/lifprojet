{% extends "OCPlatformBundle::layout.html.twig" %}

{% block body %}
  
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                {% if category.image ends with 'pdf' %}
                    <object width="700" height="700" data="{{ asset('uploads/images/category/'~category.image) }}">
                    </object>
                {% else %}
                    <a target="_blank" href="{{ asset('uploads/images/category/'~category.image) }}">
                    <img src="{{ asset('uploads/images/category/'~category.image) }}" class="img-thumbnail">
                    </a>
                {% endif %}
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="col-sm-12">
            <div class="well" style="font-size:1em">
            {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': category.id} %}
            </div>
        </div>
    </div>
    <ul>
            <a href="{{ path('categories_index') }}"> Retour Ã  la liste </a>
            <br></br>
            <a href="{{ path('categories_edit', { 'id': category.id }) }}"> Modifier </a>
            <br></br>
            <li style ="list-style:none">
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
            </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script>
        // show confirmation in popup
        $('[data-toggle=confirmation]').confirmation({
            rootSelector: '[data-toggle=confirmation]',
            // other options
        });
    </script>
{% endblock %}